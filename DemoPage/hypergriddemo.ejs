<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>AdaptableBlotter.JS Hypergrid Demo</title>
    <!--CSS for the demo-->
    <link href="hypergriddemo.css" rel="stylesheet" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="ExtLibs/bootstrap/css/bootstrap.min.css">
    <!-- Latest Hypergrid -->
    <script src="ExtLibs/hypergrid/fin-hypergrid.js"></script>
    <!-- Data Generator -->
    <script src="datagenerator.js"></script>
    <!-- Grid Setup -->
    <script src="hypergriddemo.js"></script>
</head>

<body>
    <% if (htmlWebpackPlugin.options.version) { %>
    <h2>AdaptableBlotter.JS Demos (version
      <%= htmlWebpackPlugin.options.version %>
        <%= htmlWebpackPlugin.options.versiondate %>)</h2>
    <% } %>
    <div class="panel panel-default">
        <div class="panel-body">
            <form class="form-inline" onsubmit="event.preventDefault()">
            <label>Number of Rows: </label>
            <select onchange="saveData()" id="ab_row_number" placeholder="select" class="form-control"> 
                <option value="100">100 rows</option> 
                <option value="500">500 rows</option> 
                <option value="1000">1000 rows</option>
                <option value="5000">5000 rows</option> 
                <option value="10000">10000 rows</option> 
                <option value="15000">15000 rows</option> 
                <option value="20000">20000 rows</option> 
                <option value="25000">25000 rows</option> 
                <option value="50000">50000 rows</option> 
            </select>
            <span>&nbsp;</span>
            <label>Number of Columns: </label>
            <select onchange="saveData()" id="ab_column_number" placeholder="select" class="form-control"> 
                <option value="5">5 columns</option> 
                <option value="10">10 columns</option> 
                <option value="15">15 columns</option>
                <option value="20">20 columns</option> 
                <option value="25">25 columns</option> 
                <option value="30">30 columns</option> 
                <option value="35">35 columns</option> 
                <option value="40">40 columns</option> 
                <option value="45">45 columns</option> 
                <option value="50">50 columns</option> 
            </select>
           <span>&nbsp;</span>
            <label>Ticking Interval (column 0 and 3 on all records): </label>
            <select onchange="saveData()" id="ab_ticking_data_interval" placeholder="select" class="form-control"> 
                <option value="NA">No Ticking Data</option> 
                <option value="250">250 ms</option> 
                <option value="500">500 ms</option> 
                <option value="750">750 ms</option> 
                <option value="1000">1000 ms</option> 
            </select>
            <button onclick="reInintBlotter()" id="generate_blotter" class="btn btn-primary" disabled>Regenerate Blotter</button>
            </form>
            <br/>
            <form class="form-inline" onsubmit="event.preventDefault()">
                <label>Re-Index Data (for search, filter, quicksearch etc.): </label>
                <button onclick="reIndexData()" class="btn btn-primary">Re-Index Data</button>
               <span>&nbsp;</span>
                <label>Framerate: </label>
                <label id="ab_fps_number" style="color:blue"></label>
                <span>&nbsp;</span>
                <label>Conditional Styles active: </label>
                <label id="ab_cs_number" style="color:blue"></label>
                </span>
            </form>
        </div>
    </div>
    <!-- Adaptable Blotter div for react and dashboard -->
    <div id="content" style="margin:15px;"></div>
    <p/>
    <!-- Grid div -->
    <div id="grid"></div>
    <% if (htmlWebpackPlugin.options.bundleJs) { %>
        <script src="<%= htmlWebpackPlugin.options.bundleJs %>" type="text/javascript"></script>
        <% } %>
</body>

</html>